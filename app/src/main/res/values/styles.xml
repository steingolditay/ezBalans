<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/MyButtonStyle</item>
<!--        <item name="android:windowAnimationStyle">@style/SlideAnimation.Activity</item>-->
        <item name="android:fontFamily">@font/sansation</item>
        <item name="android:textViewStyle">@style/MyTextStyle</item>

    </style>

    <style name="MyButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="MyTextStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textAlignment">viewStart</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out</item>
    </style>

    <style name="SlideAnimation.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>


</resources>